<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="720" prefWidth="1080" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.pages.ScoreBoardPage">
   <children>
      <ImageView fitHeight="720.0" fitWidth="1080.0" pickOnBounds="true">
         <image>
            <Image url="@../../assets/pageimages/ScoreboardBackground.jpg" />
         </image>
      </ImageView>
      <TableView fx:id="scoreboard" layoutX="240.0" layoutY="45.0" prefHeight="630.0" prefWidth="600.0" style="-fx-background-color: transparent;" styleClass="scoreBoard" stylesheets="@../css/ScoreboardStyle.css">
        <columns>
          <TableColumn fx:id="rankColumn" editable="false" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" resizable="false" text="Rank" />
          <TableColumn fx:id="nicknameColumn" editable="false" maxWidth="250.0" minWidth="250.0" prefWidth="250.0" resizable="false" text="Nickname" />
            <TableColumn fx:id="scoreColumn" editable="false" maxWidth="250.0" minWidth="250.0" prefWidth="250.0" resizable="false" text="Score" />
        </columns>
      </TableView>
   </children>
</AnchorPane>
