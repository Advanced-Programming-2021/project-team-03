                    </Stop>
                    <Stop offset="0.007633587786259542">
                        <color>
                            <Color red="1.0"/>
                        </color>
                    </Stop>
                    <Stop offset="0.23240092021332215">
                        <color>
                            <Color red="1.0"/>
                        </color>
                    </Stop>
                    <Stop offset="1.0">
                        <color>
                            <Color red="1.0" green="0.949999988079071"/>
                        </color>
                    </Stop>
                </stops>
            </RadialGradient>
        </fill>
