<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.view.pages.GameResultPage">
    <ImageView fitHeight="400.0" fitWidth="600.0" pickOnBounds="true">
        <Image url="@../../assets/pageImages/GameResultBackground.jpg"/>
